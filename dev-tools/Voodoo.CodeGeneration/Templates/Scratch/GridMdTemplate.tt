<#@ template language="C#"  linePragmas="false" #>
<#@ assembly name="System.Core" #>
<#@ import namespace="System.Linq" #>
<#@ import namespace="System.Text" #>
<#@ import namespace="System.Collections.Generic" #>
<div ng-controller="userController">
    <h2>Users</h2>
    <form name="userGridForm">
        <div class="gridShell">
            <div layout="row">
                <div flex="10">
                    <md-button class="md-raised md-button md-default-theme" ui-sref="users.add">Add</md-button>
                </div>
                <div flex></div>
                <div layout="row">
                    <md-input-container>
                        <input type="text"
                               autofocus="autofocus"
                               ng-model="gridState.searchText" placeholder="Search" />
                    </md-input-container>
                    <md-button type="submit" class="md-button md-icon-button" ng-click="search()">
                        <i class="material-icons">&#xE8B6;</i>
                    </md-button>
                </div>
            </div>
        </div>
        <div style="height: 460px;">
            <span ng-cloak class="text-danger">{{error}}</span>
            <table class="table table-striped table-bordered table-condensed grid">
                <thead>
                    <tr>
                        <th class="buttons"></th>
                        <th>
                            <v-sorter text="Email" member="UserName"
                                      grid-state="gridState"
                                      onsort="refresh()">
                            </v-sorter>
                        </th>
                        <th>
                            <v-sorter text="First Name" member="FirstName"
                                      grid-state="gridState"
                                      onsort="refresh()">
                            </v-sorter>
                        </th>
                        <th>
                            <v-sorter text="Last Name" member="LastName"
                                      grid-state="gridState"
                                      onsort="refresh()">
                            </v-sorter>
                        </th>
                        <th>
                            <span>
                                Roles
                            </span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="item in data">
                        <td class="buttons">
                            <a class="md-icon icon-button"
                               ui-sref="users.update({id:item.id})">
                                <i class="material-icons">&#xE254;</i>
                            </a>                           
                        </td>
                        <td>{{item.userName}}</td>
                        <td>{{item.firstName}} </td>
                        <td>{{item.lastName}}</td>
                        <td>{{item.rolesDescription}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="pull-left">
            <v-pager grid-state="gridState"
                     request-refresh="refresh()">
            </v-pager>
        </div>
    </form>
</div>
